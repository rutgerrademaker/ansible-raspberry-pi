# Replace bitwarden.yourdomain.com with the domain where Bitwarden will be accessed.
BW_DOMAIN="bitwarden.home"

# The database provider you will be using for your Bitwarden server. Available options are sqlserver, postgresql, sqlite, or mysql/mariadb.
BW_DB_PROVIDER="mariadb"

# The name of the server on which your database is running.
BW_DB_SERVER="mariadb"
	
# The name of your Bitwarden database.
BW_DB_DATABASE="bitwarden"

# The username for accessing the Bitwarden database.
BW_DB_USERNAME="bitwarden"
	
# The password for accessing the Bitwarden database.
BW_DB_PASSWORD="{{ BW_DB_PASSWORD }}"
	
# Only required for sqlite if you would like to specify the path to your database file. If not specified, sqlite will automatically create a vault.db file under the /etc/bitwarden volume.
#BW_DB_FILE=""

# A valid installation ID generated from https://bitwarden.com/host/.
BW_INSTALLATION_ID="{{ BW_INSTALLATION_ID}}"
	
# A valid installation key generated from https://bitwarden.com/host/.
BW_INSTALLATION_KEY="{{ BW_INSTALLATION_KEY}}"

APP_NAME=bitwarden
DOCKER_PORT_HTTP=8080